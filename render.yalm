databases:
  - name: myblogdb
    plan: free
    databaseName: myblogdb
    user: userweb

services:
  - type: web
    plan: free
    name: myblog
    runtime: python
    buildCommand: "./build.sh"
    startCommand: "waitress-serve --port=8000 myblog.wsgi:application"
    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: myblogdb
          property: connectionString
      - key: SECRET_KEY
        generateValue: true
      - key: WEB_CONCURRENCY
        value: 4
